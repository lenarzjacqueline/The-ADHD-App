#importing python files necessary for screen

MDScreen:
    name: 'Thank you!'
    id: thankyou
    MDLabel:
        text: 'Thank you for your time and willingness to help grow the understanding of ADHD in women'
        halign: 'center'
        pos_hint: {'center_y':0.7}
        font_style: 'H5'
        font_name: 'Poppins-Regular.ttf'
    MDLabel:
        text: 'Please click link to go to website to join our community '
        halign: 'center'
        pos_hint: {'center_y':0.6}
        font_style: 'H5'
        font_name: 'Poppins-Regular.ttf'
    MDLabel:
        text: ':)'
        halign: 'center'
        theme_text_color: "Custom"
        text_color: 1, 0.2, 0.4, 1
        pos_hint: {'center_y':0.5}
        font_name: 'Poppins-Regular.ttf'
    Label:
        id: need_help_link
        font_size: 14
        markup: True
        pos_hint: {'center_y':0.3}
        text: 'go to our website [ref=some]someweblink[/ref]'
        font_name: 'Poppins-Regular.ttf'
        on_ref_press:
            import webbrowser
            webbrowser.open('https://theadhdapp.com') 
    MDIconButton:
        icon: "home"
        on_release: app.root.current = "selection"
