#importing python files necessary for the screen


MDScreen:
    name: 'more info'
    id: moreinfo
    MDLabel:
        text: 'You want to know more about ADHD in women!'
        halign: 'center'
        pos_hint: {'center_y':0.7}
        font_style: 'H5'
        font_name: 'Poppins-Regular.ttf'
    MDLabel:
        text: 'Unfortunately, our app is simple and cannot post on this interface'
        halign: 'center'
        pos_hint: {'center_y':0.7}
        font_style: 'H5'
        font_name: 'Poppins-Regular.ttf'
    MDLabel:
        text: 'Please click the link to our website for why we care about this issue!'
        halign: 'center'
        theme_text_color: "Custom"
        text_color: 1, 0.2, 0.4, 1
        pos_hint: {'center_y':0.5}
        font_name: 'Poppins-Regular.ttf'
    Label:
        id: need_help_link
        font_size: 14
        markup: True
        pos_hint: {'center_y':0.3}
        text: 'go to our website [ref=some]someweblink[/ref]'
        font_name: 'Poppins-Regular.ttf'
        on_ref_press:
            import webbrowser
            webbrowser.open('https://theadhdapp.com') 
    MDIconButton:
        icon: "home"
        on_release: app.root.current = "selection"
        
    
