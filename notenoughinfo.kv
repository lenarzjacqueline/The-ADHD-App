#importing kv files necessary for screen
#: include selection.kv

#importing python files necessary for the screen

MDScreen:
    name: 'notenoughinfo'
    id: notenoughinfo
    MDLabel:
        text: 'We are sorry!'
        font_size: 30
        halign: 'center'
        pos_hint: {'center_y':0.8}
        font_style: 'H5'
        font_name: 'Poppins-Regular.ttf'
    MDLabel:
        text: "Unfortunately, we don't yet have enough responses for an accurate answer"
        font_size: 20
        halign: 'center'
        pos_hint: {'center_y':0.65}
        font_style: 'H5'
        font_name: 'Poppins-Regular.ttf'
    MDLabel:
        text: 'Please take this chance to ask those certain of their ADHD/non-ADHD status to participate!'
        halign: 'center'
        font_size: 16
        theme_text_color: "Custom"
        text_color: 1, 0.2, 0.4, 1
        pos_hint: {'center_y':0.5}
        font_name: 'Poppins-Regular.ttf'
    MDLabel:
        text: 'Click the link below to go to our website to sign up to receive an email when we have the information needed'
        halign: 'center'
        font_size: 16
        theme_text_color: "Custom"
        text_color: 1, 0.2, 0.4, 1
        pos_hint: {'center_y':0.35}
        font_name: 'Poppins-Regular.ttf'
    Label:
        id: need_help_link
        font_size: 14
        markup: True
        pos_hint: {'center_y':0.2}
        text: 'go to our website [ref=some]someweblink[/ref]'
        font_name: 'Poppins-Regular.ttf'
        on_ref_press:
            import webbrowser
            webbrowser.open('https://theadhdapp.com') 
    MDIconButton:
        icon: "home"
        on_release: app.root.current = "selection"
