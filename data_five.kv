Data5:
    name: 'data_five'
    id: data_five
    premature: premature
    birthweight: birthweight	
    ethnicity: ethnicity
    speedingticket: speedingticket
    publicoverwhelmed: publicoverwhelmed
    MDFloatLayout:
        MDLabel:
            text: "Data"
            font_size: "24sp"
            font_name: 'Poppins-Medium.ttf'
            pos_hint: {"center_x": .94, "center_y": .92}
        MDLabel: 
            text: "page 5"
            text_color: 1, 0.2, 0.4, 1
            theme_text_color: "Custom"
            font_size: "16"
            font_name: 'Poppins-Medium.ttf'
            pos_hint: {"center_x": .96, "center_y": .85}
        MDGridLayout:
            cols: 2
            size_hint: .79, .07
            pos_hint: {"center_x": .62, "center_y": .75}
            MDLabel:
                text: "Were you born prematurely?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: premature
                text_color: 1, 0.2, 0.4, 1
                hint_text: "1 = yes, 0 = no"
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 1
                input_filter: 'int'
        MDGridLayout:
            cols: 2
            size_hint: .85, .07
            pos_hint: {"center_x": .6,"center_y": .64}
            MDLabel:
                text: "What was your birth weight?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: birthweight
                text_color: 1, 0.2, 0.4, 1
                hint_text: "numbers & decimals only"
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 15
                input_filter: 'int'
        MDGridLayout:
            cols: 2
            size_hint: .96, .07
            pos_hint: {"center_x": .61,"center_y": .53}
            MDLabel:
                text: "What is your ethnicity?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: ethnicity
                hint_text: "1=Asian, 2=Hispanic, 3=White, 4=Black"
                text_color: 1, 0.2, 0.4, 1
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 1
                max_value : 4
                input_filter: 'int'
        MDGridLayout:
            cols: 2
            size_hint: .92, .07
            pos_hint: {"center_x": .6,"center_y": .42}
            MDLabel:
                text: "Have you gotten a speeding ticket?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: speedingticket
                text_color: 1, 0.2, 0.4, 1
                hint_text: "0 = no, 1 = yes, 2 = multiple"
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 2
                input_filter: 'int'
        MDGridLayout:
            cols: 2
            size_hint: .92, .07
            pos_hint: {"center_x": .62,"center_y": .31}
            MDLabel:
                text: "Are you easily overwhelmed in public?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: publicoverwhelmed
                text_color: 1, 0.2, 0.4, 1
                hint_text: "1 = yes, 0 = no"
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 1
                input_filter: 'int'
        MDRaisedButton: 
            text: 'Next'
            id: next_five
            theme_text_color: "Custom"
            background_color: 0,0,0,0
            size_hint: .13, .055
            font_name: 'Poppins-Regular.ttf'
            font_style: 'Subtitle2'
            pos_hint: {'center_x':0.47, 'center_y':0.12}
            on_press: root.data_five_on_press()
            on_release: app.root.current = "data_submit"
