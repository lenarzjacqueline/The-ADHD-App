            font_name: 'Poppins-Medium.ttf'
            pos_hint: {"center_x": .96, "center_y": .85}
        MDGridLayout:
            cols: 2
            size_hint: .79, .07
            pos_hint: {"center_x": .67, "center_y": .75}
