Diagnosis4:
    name: 'diagnosis_four'
    id: diagnosis_four
    siblingsamount: siblingsamount 
    siblingorder: siblingorder	
    autism: autism 
    trauma: trauma
    wfh: wfh
    MDFloatLayout:
        MDLabel:
            text: "Diagnosis"
            font_size: "24sp"
            font_name: 'Poppins-Medium.ttf'
            pos_hint: {"center_x": .94, "center_y": .92}
        MDLabel: 
            text: "page 4"
            text_color: 1, 0.2, 0.4, 1
