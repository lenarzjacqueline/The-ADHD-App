            cols: 2
            size_hint: .91, .07
            pos_hint: {"center_x": .6,"center_y": .64}
            MDLabel:
                text: "Oldest child? Youngest child?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: siblingorder
                text_color: 1, 0.2, 0.4, 1
                hint_text: '1 = youngest, 2 = neither, 3 = oldest'
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 1
                max_value : 3
                input_filter: 'int'
