                text: "Do you have autism?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: autism
                text_color: 1, 0.2, 0.4, 1
                hint_text: "1 = yes, 0 = no"
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 1
                input_filter: 'int'
        MDGridLayout:
            cols: 2
            size_hint: .96, .07
            pos_hint: {"center_x": .58,"center_y": .42}
            MDLabel:
                text: "Have you had a major traumatic event happen?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: trauma
                text_color: 1, 0.2, 0.4, 1
                hint_text: "0 = no, 1 = yes, childhood, 2 = yes, recently"
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 2
                input_filter: 'int'
        MDGridLayout:
            cols: 2
            size_hint: .85, .07
            pos_hint: {"center_x": .64,"center_y": .31}
            MDLabel:
                text: "Do you work from home?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: wfh
                text_color: 1, 0.2, 0.4, 1
                hint_text: "1 = yes, 0 = no"
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 1
                input_filter: 'int'
        MDRaisedButton: 
            text: 'Next'
            id: next_four
            theme_text_color: "Custom"
            background_color: 0,0,0,0
            size_hint: .13, .055
            font_name: 'Poppins-Regular.ttf'
            font_style: 'Subtitle2'
            pos_hint: {'center_x':0.47, 'center_y':0.12}
            on_press: app.root.current = "diagnosis_five"
