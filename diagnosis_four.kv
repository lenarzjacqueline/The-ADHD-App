                text: "Number of siblings?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: siblingsamount
                text_color: 1, 0.2, 0.4, 1
                hint_text: 'insert number'
                font_name: 'Poppins-Regular.ttf'
