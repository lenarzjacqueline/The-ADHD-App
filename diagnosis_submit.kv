#importing the dependent kv files
#: include resultssplashscreen.kv

Diagnosis_Submit:
    name: 'diagnosis_submit'
    id: diagnosis_submit
    ed: ed
    imposter: imposter
    temper: temper
    appointments: appointments
    concentratetalking: concentratetalking
    epilepsy: epilepsy
    MDFloatLayout:
        MDLabel:
            text: "Diagnosis"
            font_size: "24sp"
            font_name: 'Poppins-Medium.ttf'
            pos_hint: {"center_x": .94, "center_y": .92}
        MDLabel: 
            text: "page 6"
            text_color: 1, 0.2, 0.4, 1
