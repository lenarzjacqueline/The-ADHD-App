                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: ed
                text_color: 1, 0.2, 0.4, 1
                hint_text: "1 = yes, 0 = no"
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 1
                input_filter: 'int'
