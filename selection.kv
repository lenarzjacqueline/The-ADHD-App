MDScreen:    
    name: "selection"
    MDFloatLayout:
        radius: [25, 0, 0, 0]
        md_bg_color: 1,1,1,1
        MDToolbar:
            color_mode: 'primary'
            title: "ADHD APP"
        MDLabel:
            text: 'How would you like to join our community?'
            halign: 'center'
            pos_hint: {'center_x':0.5, 'center_y':0.7}
            font_name: 'Poppins-Regular.ttf'
        MDRaisedButton:
            pos_hint: {'center_x':0.39, 'center_y':0.5}
            text: 'Data'
            theme_text_color: "Custom"
            size_hint: .195, .12
            font_name: 'Poppins-Regular.ttf'
            on_release: app.root.current = "registerdata"
        MDRaisedButton:
            pos_hint: {'center_x':0.61, 'center_y':0.5}
            text: 'Diagnosis'
            theme_text_color: "Custom"
            size_hint: .195, .12
            font_name: 'Poppins-Regular.ttf'
            on_release: app.root.current = "registerdiagnosis"
        MDRaisedButton:
            text: 'what is ADHD?'
            theme_text_color: "Custom"
            size_hint: .15, .07
            font_name: 'Poppins-Regular.ttf'
            font_style: 'Subtitle2'
            pos_hint: {'center_x':0.5, 'center_y':0.35}
            on_release: app.root.current = "info"
