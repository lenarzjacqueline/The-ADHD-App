Data3:
    name: "data_three"
    id: data_three    
    headtraumas: headtraumas	
    money: money	
    impatient: impatient
    parentsdiagnosed: parentsdiagnosed	
    siblingsdiagnosed: siblingsdiagnosed	
    MDFloatLayout:
        MDLabel:
            text: "Data"
            font_size: "24sp"
            font_name: 'Poppins-Medium.ttf'
            pos_hint: {"center_x": .94, "center_y": .92}
        MDLabel: 
            text: "page 3"
            text_color: 1, 0.2, 0.4, 1
            theme_text_color: "Custom"
            font_size: "16"
            font_name: 'Poppins-Medium.ttf'
            pos_hint: {"center_x": .96, "center_y": .85}
        MDGridLayout:
            cols: 2
            size_hint: .92, .07
            pos_hint: {"center_x": .62, "center_y": .75}
            MDLabel:
                text: "Number of head traumas?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: headtraumas
                text_color: 1, 0.2, 0.4, 1
                hint_text: 'ex: concussion - insert number'
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 15
                input_filter: 'int'
        MDGridLayout:
            cols: 2
            size_hint: .95, .07
            pos_hint: {"center_x": .61,"center_y": .64}
            cols: 2
            MDLabel:
                text: "Do you have a good concept of money?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: money
                text_color: 1, 0.2, 0.4, 1
                hint_text: "1 = yes, 0 = no"
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 1
                input_filter: 'int'
        MDGridLayout:
            cols: 2
            size_hint: .96, .07
            pos_hint: {"center_x": .61,"center_y": .53}
            cols: 2
            MDLabel:
                text: "Would you consider yourself impatient?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: impatient
                text_color: 1, 0.2, 0.4, 1
                hint_text: "1 = yes, 0 = no"
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 1
                input_filter: 'int'
        MDGridLayout:
            cols: 2
            size_hint: .96, .07
            pos_hint: {"center_x": .61,"center_y": .42}
            cols: 2
            MDLabel:
                text: "Do either of your parents have ADHD/ADD?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: parentsdiagnosed
                text_color: 1, 0.2, 0.4, 1
                hint_text: "0 = no, 1 = one, 2 = both"
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 2
                input_filter: 'int'
        MDGridLayout:
            cols: 2
            size_hint: .9, .07
            pos_hint: {"center_x": .63,"center_y": .31}
            cols: 2
            MDLabel:
                text: "Siblings diagnosed?"
                font_size: "14sp"
                font_name: 'Poppins-Medium.ttf'
                pos_hint: {"center_x": .5, "center_y": .9}
            NumericInput: 
                id: siblingsdiagnosed
                text_color: 1, 0.2, 0.4, 1
                hint_text: "0 = no, 1 = yes, 2 = multiple"
                font_name: 'Poppins-Regular.ttf'
                pos_hint: {"center_x": .49, "center_y": .3}
                background_color: 0,0,0,0
                cursor_color: 1, 0.2, 0.4, 1
                cursor_width: "2sp"
                font_size: "14sp"
                multiline: False
                min_value : 0
                max_value : 2
                input_filter: 'int'
        MDRaisedButton: 
            text: 'Next'
            id: next_three
            theme_text_color: "Custom"
            background_color: 0,0,0,0
            size_hint: .13, .055
            font_name: 'Poppins-Regular.ttf'
            font_style: 'Subtitle2'
            pos_hint: {'center_x':0.47, 'center_y':0.12}
            on_press: root.data_three_on_press()
            on_release: app.root.current = "data_four"
