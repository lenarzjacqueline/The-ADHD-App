#: include results.kv  

#importing python files necessary for the screen


MDScreen:
    id: resultssplashscreen
    name: 'ResultsSplashscreen'
    MDFloatLayout:
        MDLabel:
            text: 'Thank you for participating!'
            halign: 'center'
            pos_hint: {'center_y':0.7}
            font_style: 'H3'
            font_name: 'Poppins-Medium.ttf'
            font_size: 30
        MDLabel:
            text: 'your results should be calculating momentarily'
            halign: 'center'
            theme_text_color: "Custom"
            text_color: 1, 0.2, 0.4, 1
            pos_hint: {'center_y':0.45}
            font_name: 'Poppins-Regular.ttf'
        MDRaisedButton: 
            text: 'calculate'
            id: registerbtn
            theme_text_color: "Custom"
            self.background_color = (0,0,0,0)
            size_hint: .20, .09
            font_name: 'Poppins-Regular.ttf'
            font_style: 'Subtitle2'
            pos_hint: {'center_x':0.8, 'center_y':0.70}
            on_press: self.background_color = (1, 0.2, 0.4, 1)
            on_release: app.root.current = "results"
